fn _bashish_module {
	. $BASHISHDIR/main/prompt/rc/$1
}

fn getbt {
which bashishtheme
}
bashishtheme=`getbt
fn getbt
eval 'fn bashishtheme { '$bashishtheme' $1 $2 $3 $4 $5 $6 $7 $8 $9 &&_bashish_module sys/loadprompt;}'

# load some stuff
_bashish_module sys/loadprompt
